<html> 
<body> 
	<%= simple_form_for:pokemon , url:"../pokemon/new", method: "post" do |form| %>
	<%= form.input :name %>
	<br> 
	<br>
	<br>
	<%= form.input :ndex %>
	<%= form.collection_radio_buttons(
    :ndex, (1..20).map {|ndex| [ndex, ndex]}, :first, :last) do |b| %>
  	<div class="pokemon-choice-container">
    <%= b.label { image_tag("pokemon/#{b.text}.png") + b.radio_button } %>
    </div>
    <% end %>
    <br>
    <%= form.button :submit, class: "create-pokemon-btn" %>
    <% end %>